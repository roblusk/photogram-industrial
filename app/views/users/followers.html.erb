<div class="row">
  <div class="col md-6 offset-3">
    <h1>
      <%= @user.username %>
    </h1>

    <ul class="nav nav-pills">
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Liked photos", liked_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Feed</a>
      </li>
      <li class="nav-item nav-justified">
        <%= link_to "Followers", followers_path(@user.username), class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to "Following", following_path(@user.username), class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>
